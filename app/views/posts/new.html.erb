<h1>新規投稿</h1>

<%= form_for(@post) do |f| %>

   <h4>タイトル</h4>
   <%= f.text_field :title %>

   <h4>本文</h4>
   <%= f.text_area :body %>

   <h4>画像</h4>
   <%= f.attachment_field :image %>

   <%= f.submit '投稿' %>

   <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーが発生しました。</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>

<% end %>
